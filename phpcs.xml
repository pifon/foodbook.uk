<?xml version="1.0"?>
<ruleset name="Foodbook Client">
    <description>PHP CodeSniffer rules for Foodbook Client</description>

    <file>app</file>
    <file>config</file>
    <file>routes</file>
    <file>bootstrap/app.php</file>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>

    <arg name="colors"/>
    <arg value="sp"/>

    <rule ref="PSR12"/>
</ruleset>
